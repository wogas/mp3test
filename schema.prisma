// This file is automatically generated by Keystone, do not modify it manually.
// Modify your Keystone config when you want to change this.

datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Artist {
  id               String  @id @default(cuid())
  name             String  @unique @default("")
  about            Json    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  birthname        String  @default("")
  genre            String  @default("")
  dob              String  @default("")
  recordLabel      String  @default("")
  avater_filesize  Int?
  avater_extension String?
  avater_width     Int?
  avater_height    Int?
  avater_id        String?
  songs            Song[]  @relation("Artist_songs")
  album            Album[] @relation("Album_artist")
}

model Song {
  id                   String    @id @default(cuid())
  title                String    @unique @default("")
  description          String    @default("")
  genre                String    @default("")
  listenedCount        Int?      @default(0)
  downloads            Int?      @default(0)
  tags                 String    @default("")
  songUrl_filesize     Int?
  songUrl_filename     String?
  songAvater_filesize  Int?
  songAvater_extension String?
  songAvater_width     Int?
  songAvater_height    Int?
  songAvater_id        String?
  featuring            Json?     @default("{\"features\":{\"artist_name\":false}}")
  album                Album[]   @relation("Album_song")
  artist               Artist[]  @relation("Artist_songs")
  comment              Comment[] @relation("Comment_song")
  lyrics               Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  createdAt            DateTime? @default(now()) @updatedAt
}

model Album {
  id        String   @id @default(cuid())
  title     String   @unique @default("")
  about     String   @default("")
  featuring Json?    @default("{\"features\":false,\"moreInfo\":false}")
  artist    Artist[] @relation("Album_artist")
  song      Song[]   @relation("Album_song")
}

model Comment {
  id      String  @id @default(cuid())
  name    String  @default("")
  email   String  @unique @default("")
  content String  @default("")
  reply   Reply[] @relation("Comment_reply")
  song    Song[]  @relation("Comment_song")
}

model Reply {
  id      String    @id @default(cuid())
  name    String    @default("")
  content String    @default("")
  comment Comment[] @relation("Comment_reply")
}